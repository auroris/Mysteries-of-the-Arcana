<h1>Comics</h1>

<table>
<tr><th>Title</th><th>Author</th><th>Artist</th></tr>
{% for comic in collections.comics %}
  <tr><td><a href="{{ comic.url }}">{{ comic.data.title }}</a></td>
  <td>{{ comic.data.author }}</td><td>{{ comic.data.artist }}</td>
  </tr>
{% endfor %}
</table>

<h1>Blog Posts</h1>

<table>
<tr><th>Title</th><th>Author</th><th>Date</th></tr>
{% for post in collections.posts %}
  <tr><td><a href="{{ post.url }}">{{ post.data.title }}</a></td>
  <td>{{ post.data.author }}</td><td>{{ post.data.date }}</td>
  </tr>
{% endfor %}
</table>

